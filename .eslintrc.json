{
  "env": {
    "browser": true,
    "latest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"

  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import", "node"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "import/order": "error",
    "import/no-unresolved": "error",
    "node/no-missing-import": "error",
    "node/no-missing-require": "error"
  }
}
